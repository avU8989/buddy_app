<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="8dp">

	<TextView
		android:id="@+id/text_view_username"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Username"
		android:textSize="8dp"
		android:textColor="#000000"
		android:textStyle="bold"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="4dp" />

	<ImageView
		android:id="@+id/imageUrl"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignStart="@id/text_view_username"
		android:layout_below="@id/text_view_username"
		/>

	<TextView
		android:id="@+id/text_view_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/imageUrl"
		android:layout_alignTop="@id/imageUrl"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:text="hellohellohello"
		android:textColor="@android:color/black"
		android:textSize="16dp"
		android:maxLines="2" />

	<LinearLayout
		android:id="@+id/toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/text_view_message"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/upvote_icon"
			android:layout_width="40dp"
			android:layout_height="25dp"
			android:src="@drawable/up"
			android:layout_gravity="end" />

		<TextView
			android:id="@+id/upvote_count_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="10"
			android:textSize="14dp"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="0dp" />

		<ImageView
			android:id="@+id/downvote_icon"
			android:layout_width="40dp"
			android:layout_height="25dp"
			android:src="@drawable/down"
			android:layout_gravity="end"
			android:layout_marginStart="0dp" />

		<TextView
			android:id="@+id/downvote_count_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="5"
			android:textSize="14dp"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="4dp" />

	</LinearLayout>

</RelativeLayout>
