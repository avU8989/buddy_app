<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/adding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/what_do_you_want_to_do">

                <ImageView
                    android:id="@+id/__img___main_bg_frame3"
                    android:layout_width="match_parent"
                    android:layout_height="305dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-9dp"
                    android:contentDescription="__img___main_bg_frame3"
                    android:src="@drawable/background" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/first_frame_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/discover_learngroups"
                                android:layout_width="325dp"
                                android:layout_height="201dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="163dp"
                                android:contentDescription="__img___main_bg_frame4"
                                android:src="@drawable/home_card4" />

                            <TextView
                                android:id="@+id/discover_learngroup_text_view"
                                android:layout_width="134dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="210dp"
                                android:layout_marginStart="50dp"
                                android:fillColor="#FF000000"
                                android:fontFamily="Poppins"
                                android:shadowColor="#000000"
                                android:shadowDx="0"
                                android:shadowDy="4"
                                android:shadowRadius="4"
                                android:text="@string/looking_for_a_learngroup"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/discover_learngroup_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="265dp"
                                android:layout_marginStart="50dp"
                                android:text="Discover"
                                android:fillColor="#FF000000"
                                android:textColor="@android:color/white" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/second_frame_layout"
                            android:layout_width="wrap_content"
                            android:layout_alignTop="@id/first_frame_layout"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/discover_learnbuddy"
                                android:layout_width="325dp"
                                android:layout_height="201dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="163dp"
                                android:contentDescription="__img___main_bg_frame4"
                                android:src="@drawable/home_card_3" />

                            <TextView
                                android:id="@+id/discover_learnbuddy_text_view"
                                android:layout_width="134dp"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@id/second_frame_layout"
                                android:layout_marginTop="210dp"
                                android:layout_marginStart="50dp"
                                android:fillColor="#FF000000"
                                android:fontFamily="Poppins"
                                android:shadowColor="#000000"
                                android:shadowDx="0"
                                android:shadowDy="4"
                                android:shadowRadius="4"
                                android:text="@string/looking_for_a_learnbuddy"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/discover_learnbuddy_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="265dp"
                                android:layout_marginStart="50dp"
                                android:text="Discover"
                                android:fillColor="#FF000000"
                                android:textColor="@android:color/white" />
                        </FrameLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="289.31dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="Poppins"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/let_s_start_learning"
            android:layout_width="301.38dp"
            android:layout_height="wrap_content"
            android:fontFamily="Poppins"
            android:layout_below="@id/username"
            android:text="@string/welcome_message"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/learn_buddy_points_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:text="800"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/buddypoints"
                android:layout_toEndOf="@id/learn_buddy_points_text_view"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/buddyRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/learn_buddy_points_text_view"
                android:text="BuddyRank: MENTOR"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/what_do_you_want_to_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginStart="100dp"
        android:text="Stay up to date"
        android:paddingBottom="8dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:fillColor="#FF000000"
        android:fontFamily="Poppins"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        app:layout_constraintTop_toBottomOf="@id/adding"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintTop_toBottomOf="@+id/what_do_you_want_to_do"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/homecard_1"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/__img___main_bg_frame2"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homecard_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BuddyPoints"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Help your collegues by responding and asking question to gain BuddyPoints and increase your Buddyrank."
                    android:layout_marginRight="120dp"
                    android:textSize="16dp"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/discover_buddy_points"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="280dp"
                    android:layout_marginTop="95dp"
                    android:fillColor="@android:color/transparent"
                    android:text="More Info"
                    android:textColor="@android:color/white" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homecard_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New StudyBuddies joined"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Check out new potential study buddy near your location!"
                    android:layout_marginRight="120dp"
                    android:textSize="16dp"
                    android:padding="10dp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homecard_3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Learn groups!"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="A new learn group for Entwicklungspsychologie was recently created"
                    android:layout_marginRight="120dp"
                    android:textSize="16dp"
                    android:padding="10dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homecard_4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You got a new Buddy"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Go to chat to see your newest potential StudyBuddy"
                    android:layout_marginRight="120dp"
                    android:textSize="16dp"
                    android:padding="10dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/taskbar"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



